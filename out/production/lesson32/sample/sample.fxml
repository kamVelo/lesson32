<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller"> <!-- this is the fxml controller there can only be one. sample is the package name-->

    <Label text="I love bacon"/>
    <Button text="Submit" fx:id="button" onAction="#handleButtonClick"/> <!--by giving this Button an fx:id we can access it in the controller-->

</VBox>